<html>
    <head>
        <link rel="stylesheet" type = "text/css" href="../css/mainpage.css">
		<link rel = "stylesheet" type = "text/css" href = "../css/index.css">
		<script src = "../js/mainpage.js"></script>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title> Home</title>
    </head>

    <body>
        <div class = "main-container">
			<div class = "menu-bar">
                <ul class = "menu-actions">
                    <a href = "/mainpage/{{loggeduser.username}}"><li class ="forum-logo"></li></a>
                </ul>
                <ul class="menu-actions">
                    <li><a href="/mainpage/{{loggeduser.username}}" class="home-button">Home</a></li>
                    <li class = "search-bar">
                        <form action="/searchresults/{{loggeduser.username}}" method="GET">
                            <input type="text" class="search-bar" id="searchquery" name="searchquery" placeholder="Search...">
                    </li>
                    <li class = "search-button"><button type="submit" id="query-button" name="qb"></button></form></li>
			    </ul>
                <ul class = "menu-actions">
                    <ul class = "menu-actions">
                        <li><a href = "/logout"><button type="button" class="logout-button">Logout</button></a></li>
                    </ul>
                    <li> <span class = "user-name">{{loggeduser.username}}</span></li>
                    <li><a href = "/user-profile/{{loggeduser.username}}-posts"><img class = "user-icon" src="{{loggeduser.profilePicture}}"/></a></li>
                </ul>
            </div>
        </div>
		
        <div class="main-div">
            <div class="main-postpage pagecolor"> 
                <div class="main-postpage-top">
					<label class="main-sortby"> Sort by:</label>
					
					<select class="main-dropdown" id="main-dropdown" onchange="urlHandler(this.value,'{{setting}}')">
						<option class="main-option" value="/mainpage/{{loggeduser.username}}"></option> 
						<option class="main-option" value="/popularResults/{{loggeduser.username}}">Popular</option>
						<option class="main-option" value="/trendingResults/{{loggeduser.username}}">Trending</option>
						<option class="main-option" value="/controversialResults/{{loggeduser.username}}">Controversial</option>
					</select>
					<a class="link-post" href="/create-post/{{loggeduser.username}}" >
						<button class="main-createpost-button" href="/create-post/{{loggeduser.username}}">  Create New<br> Post </button>
					</a>
				</div>
				<div class="main-postpage-posts">
					<p class="main-poststitle"> POSTS </p>
					 
					{{#each post_array}}
					
					<div class="main-postpage-idvpost">
						<div class="main-postpage-vote">
							<div class = "upvote" id = "upvote3#" onclick="upVote({{this.post.postId}}, '{{../loggeduser.username}}')"></div>
							<div class = "vote-number" id = "vote-number{{this.post.postId}}"> {{this.post.votes}} </div>
							<div class = "downvote" id = "downvote3#" onclick="downVote({{this.post.postId}}, '{{../loggeduser.username}}')"></div>
						</div>
						<div class="main-postpage-image">
							<a class="link-post" href="/post/{{../loggeduser.username}}-{{this.post.title}}"> <img class="main-indpost-image" src="{{this.post.image}}"></a>
						</div>
						<div class="main-postpage-description">
							<p class="main-indpost-title">
								<a class="link-post" href="/post/{{../loggeduser.username}}-{{this.post.title}}"> {{this.post.title}}</a>
							</p>
							<!-- removed href muna para no error when running -->
							<p class="main-indpost-postedby"> Posted by <a class="link-post"> {{this.username}} </a> </p>

							<p class="main-indpost-description"> 
								{{this.post.description}}
							</p>
							
						</div>
					</div>
					{{/each}}

				</div>
            </div>

			<div class="main-rightpage">
				<div class="main-announcements pagecolor">
					<p class="main-announcements-title"> Announcements from the developers</p>
					<p class="main-announcement-message">
						Thank you for participating for the ArchersGuild 
						alpha testing. 
					</p>
				</div>
				<div class="main-tags">
					<div class="main-gametag firsttag">
						<a class="gametag" href="/tagFPS/{{loggeduser.username}}"> FPS </a>
					</div>

					<div class="main-gametag firsttag">
						<a class="gametag" href="/tagMoba/{{loggeduser.username}}"> MOBA</a>
					</div>

					<div class="main-gametag firsttag">
						<a class="gametag" href="/tagSinglePlayer/{{loggeduser.username}}">Single Player</a>
					</div>

					<div class="main-gametag firsttag">
						<a class="gametag" href="/tagMultiPlayer/{{loggeduser.username}}">Multiplayer</a>
					</div>
				</div>
				<div class="main-recentposts pagecolor">
					
				</div>
			</div>
        
        </div>



    </body>
</html>
